pipeline {
    agent any
    environment {
        PATH = "${tool('sbt')}:$PATH"
    }
    stages {
        stage('Compile') {
            steps {
                ansiColor('xterm') {
                    sh 'sbt compile'
                }
            }
        }
        stage('Stage Docker') {
            steps {
                ansiColor('xterm') {
                    sh 'sbt encode-explorer/docker:stage'
                }
            }
        }
        cleanWs()
    }
}
