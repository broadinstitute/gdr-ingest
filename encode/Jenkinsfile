pipeline {
    agent any
    environment {
        PATH = "${tool('sbt')}:$PATH"
    }
    stages {
        ansiColor('xterm') {
            stage('Compile') {
                steps {
                    sh 'sbt compile'
                }
            }
            stage('Stage Docker') {
                steps {
                    sh 'sbt encode-explorer/docker:stage'
                }
            }
        }
    }
}
